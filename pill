    Built as a single <span class="mono">index.html</span> file for GitHub Pages.
  </div>

  <script>
    const items = [
      { type: "Simile", definition: "A comparison using *like* or *as*", example: "Her smile was like the sun." },
      { type: "Metaphor", definition: "A comparison that says something *is* something else (no like or as).", example: "Her eyes were diamonds." },
      { type: "Personification", definition: "Giving human qualities to something that is not human", example: "The wind whispered through the trees" },
      { type: "Repetition", definition: "Repeating a word or phrase to emphasize an idea or feeling.", example: "\"Never, never, never give up\"" },
      { type: "Imagery", definition: "Language that appeals to the five senses to create a picture in the reader's mind.", example: "The warm bread smelled sweet and buttery" },
      { type: "Anagram", definition: "a word made by rearranging the letters of another word", example: "listen -> silent" },
      { type: "onomatopoeia", definition: "A word that sounds like what it means.", example: "Bang! Buzz! Splash!" },
      { type: "word layout", definition: "How words are arranged on the page to add meaning or emotion", example: "sl\n                    ow\n                         ly\n                              fa\n                                  ll\n                                    ing" }
    ];

    function escapeHTML(str){
      return String(str)
        .replaceAll("&","&amp;")
        .replaceAll("<","&lt;")
        .replaceAll(">","&gt;")
        .replaceAll('"',"&quot;")
        .replaceAll("'","&#039;");
    }

    function italicizeStars(str){
      const raw = String(str);
      const parts = raw.split("*");
      let out = "";
      for (let i = 0; i < parts.length; i++){
        const p = escapeHTML(parts[i]);
        out += (i % 2 === 1) ? ("<em>" + p + "</em>") : p;
      }
      return out;
    }

    function shuffle(arr){
      const a = arr.slice();
      for (let i = a.length - 1; i > 0; i--){
        const j = Math.floor(Math.random() * (i + 1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    function pickN(arr, n, excludeIndex){
      const idxs = [];
      for (let i = 0; i < arr.length; i++){
        if (i !== excludeIndex){ idxs.push(i); }
      }
      return shuffle(idxs).slice(0, n);
    }

    const modePill = document.getElementById("modePill");
    const questionPill = document.getElementById("questionPill");
    const scorePill = document.getElementById("scorePill");
    const streakPill = document.getElementById("streakPill");

    const promptLabel = document.getElementById("promptLabel");
    const promptText = document.getElementById("promptText");
    const promptSub = document.getElementById("promptSub");
    const answersEl = document.getElementById("answers");
    const feedbackEl = document.getElementById("feedback");

    const kpiCorrect = document.getElementById("kpiCorrect");
    const kpiAttempts = document.getElementById("kpiAttempts");
    const kpiAcc = document.getElementById("kpiAcc");

    const btnMode1 = document.getElementById("btnMode1");
    const btnMode2 = document.getElementById("btnMode2");
    const btnMode3 = document.getElementById("btnMode3");
    const btnNew = document.getElementById("btnNew");
    const btnReveal = document.getElementById("btnReveal");
    const btnReset = document.getElementById("btnReset");

    const MODE = { TYPE_TO_DEF: 1, DEF_TO_TYPE: 2, EXAMPLE_TO_TYPE: 3 };

    let mode = MODE.TYPE_TO_DEF;
    let current = null;
    let locked = false;

    let attempts = 0;
    let correct = 0;
    let streak = 0;
    let qnum = 0;

    function renderStudyGuide(){
      const list = document.getElementById("typeList");
      list.innerHTML = "";
      for (const it of items){
        const div = document.createElement("div");
        div.className = "typeItem";
        div.innerHTML = `
          <div class="t">${escapeHTML(it.type)}</div>
          <div class="d">${italicizeStars(it.definition)}</div>
          <div class="e">${italicizeStars(it.example).replaceAll("\n","<br>")}</div>
        `;
        list.appendChild(div);
      }
    }

    function setMode(newMode){
      mode = newMode;

      const label =
        mode === MODE.TYPE_TO_DEF ? "Type ‚Üí Definition" :
        mode === MODE.DEF_TO_TYPE ? "Definition ‚Üí Type" :
        "Example ‚Üí Type";

      modePill.textContent = "Mode: " + label;
      newQuestion();
    }

    function newQuestion(){
      locked = false;
      feedbackEl.style.display = "none";
      feedbackEl.className = "feedback";
      answersEl.innerHTML = "";
      promptSub.textContent = "";

      const correctIndex = Math.floor(Math.random() * items.length);
      const correctItem = items[correctIndex];

      const choiceCount = 4;
      const otherIdxs = pickN(items, choiceCount - 1, correctIndex);
      const choiceIdxs = shuffle([correctIndex, ...otherIdxs]);

      let promptMain = "";
      let sub = "";
      let choices = [];
      let correctChoiceIndex = -1;

      if (mode === MODE.TYPE_TO_DEF){
        promptLabel.textContent = "Type";
        promptMain = correctItem.type;
        sub = "Pick the correct definition.";

        choices = choiceIdxs.map(idx => items[idx].definition);
        correctChoiceIndex = choiceIdxs.indexOf(correctIndex);

      } else if (mode === MODE.DEF_TO_TYPE){
        promptLabel.textContent = "Definition";
        promptMain = correctItem.definition;
        sub = "Pick the correct type.";

        choices = choiceIdxs.map(idx => items[idx].type);
        correctChoiceIndex = choiceIdxs.indexOf(correctIndex);

      } else {
        promptLabel.textContent = "Example";
        promptMain = correctItem.example;
        sub = "Pick the correct type.";

        choices = choiceIdxs.map(idx => items[idx].type);
        correctChoiceIndex = choiceIdxs.indexOf(correctIndex);
      }

      current = { correctItem, correctChoiceIndex, choices, mode };

      qnum += 1;
      questionPill.textContent = "Question: " + qnum;

      if (mode === MODE.DEF_TO_TYPE){
        promptText.innerHTML = italicizeStars(promptMain);
      } else if (mode === MODE.EXAMPLE_TO_TYPE){
        promptText.innerHTML = italicizeStars(promptMain).replaceAll("\n","<br>");
      } else {
        promptText.textContent = promptMain;
      }
      promptSub.textContent = sub;

      renderChoices();
      updateStats();
    }

    function renderChoices(){
      const letters = ["A","B","C","D"];
      answersEl.innerHTML = "";

      current.choices.forEach((choice, i) => {
        const btn = document.createElement("button");
        btn.className = "answerBtn";
        btn.type = "button";

        const left = document.createElement("div");
        left.className = "badge";
        left.textContent = letters[i];

        const right = document.createElement("div");
        right.className = "answerText";

        if (current.mode === MODE.TYPE_TO_DEF){
          right.innerHTML = italicizeStars(choice);
        } else {
          right.textContent = choice;
        }

        btn.appendChild(left);
        btn.appendChild(right);

        btn.addEventListener("click", () => choose(i, btn));
        answersEl.appendChild(btn);
      });
    }

    function choose(i, btn){
      if (!current || locked) return;

      locked = true;
      attempts += 1;

      const allButtons = Array.from(answersEl.querySelectorAll("button"));
      allButtons.forEach(b => b.disabled = true);

      const isCorrect = (i === current.correctChoiceIndex);

      if (isCorrect){
        correct += 1;
        streak += 1;
        feedbackEl.style.display = "block";
        feedbackEl.className = "feedback good";
        feedbackEl.innerHTML = `<b>Correct!</b> üéâ`;
      } else {
        streak = 0;
        feedbackEl.style.display = "block";
        feedbackEl.className = "feedback bad";
        feedbackEl.innerHTML = `<b>Not quite!</b> The answer was <b>${escapeHTML(current.correctItem.type)}</b>.`;
      }

      updateStats();
    }

    function updateStats(){
      kpiCorrect.textContent = String(correct);
      kpiAttempts.textContent = String(attempts);
      const acc = attempts === 0 ? 0 : Math.round((correct / attempts) * 100);
      kpiAcc.textContent = acc + "%";
      streakPill.textContent = "Streak: " + streak;
      scorePill.textContent = "Score: " + correct + " / " + attempts;
    }

    function resetStats(){
      attempts = 0; correct = 0; streak = 0; qnum = 0;
      updateStats();
      questionPill.textContent = "Question: ‚Äî";
      feedbackEl.style.display = "none";
      promptLabel.textContent = "Prompt";
      promptText.textContent = "Choose a mode to start.";
      promptSub.textContent = "";
      answersEl.innerHTML = "";
      modePill.textContent = "Mode: ‚Äî";
    }

    btnMode1.addEventListener("click", () => setMode(MODE.TYPE_TO_DEF));
    btnMode2.addEventListener("click", () => setMode(MODE.DEF_TO_TYPE));
    btnMode3.addEventListener("click", () => setMode(MODE.EXAMPLE_TO_TYPE));
    btnNew.addEventListener("click", () => newQuestion());
    btnReveal.addEventListener("click", () => {
      if (!current) return;
      feedbackEl.style.display = "block";
      feedbackEl.className = "feedback";
      feedbackEl.innerHTML = `<b>Answer:</b> ${escapeHTML(current.correctItem.type)}`;
    });
    btnReset.addEventListener("click", () => resetStats());

    renderStudyGuide();
    modePill.textContent = "Mode: ‚Äî";
    questionPill.textContent = "Question: ‚Äî";
    scorePill.textContent = "Score: 0 / 0";
  </script>
</body>
</html>
